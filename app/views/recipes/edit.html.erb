<h1> Edit Recipe </h1>
<br>
<% if @recipe.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @recipe.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>

<% end %>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="recipe_name">Recipe:</label>
  <input id="recipe_name" name="recipe[name]" type="text" value="<%= @recipe.name %>">
  <br>
  <label for="recipe_stars">Rating:</label>
  <input id="recipe_stars" name="recipe[stars]" type="text" value="<%= @recipe.stars %>">
  <br>
   <br>
  <button>Update Recipe</button>
</form>

<br>
<br>

<p><a href="/recipes"><i>Return To Recipe Index</i></a></p>
